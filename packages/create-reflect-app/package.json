{
  "name": "create-reflect",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "dependencies": {
    "@clack/core": "^0.1.3",
    "@clack/prompts": "^0.2.2",
    "picocolors": "^1.0.0"
  },
  "scripts": {
    "start": "jiti ./src/index.ts",
    "build": "unbuild",
    "check-types": "tsc --noEmit",
    "lint": "eslint --ext .ts,.tsx,.js,.jsx ./src",
    "format": "prettier --write './src/**/*.{js,jsx,json,ts,tsx,html,css,md}' '*.{cjs,js,jsx,json,ts,tsx,html,css,md}'",
    "check-format": "prettier --check './src/**/*.{js,jsx,json,ts,tsx,html,css,md}' '*.{cjs,js,jsx,json,ts,tsx,html,css,md}'"
  },
  "devDependencies": {
    "jiti": "^1.17.0",
    "unbuild": "^1.1.1",
    "@types/node": "18",
    "typescript": "^4.9.5",
    "@rocicorp/eslint-config": "^0.1.2",
    "@rocicorp/prettier-config": "^0.1.1"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "bin": {
    "create-reflect-app": "index.js"
  },
  "eslintConfig": {
    "extends": "@rocicorp/eslint-config"
  },
  "prettier": "@rocicorp/prettier-config"
}
